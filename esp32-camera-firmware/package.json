{
    "name": "esp32-camera-firmware",
    "version": "1.0.1",
    "description": "ESP32-CAM Firmware (Arduino/PlatformIO)",
    "scripts": {
        "!build": "------ Build Firmware ------",
        "build": "pio run",
        "build:verbose": "pio run -v",
        "build:clean": "pio run --target clean",
        "!upload": "------ Upload to ESP32 ------",
        "upload": "pio run --target upload",
        "upload:monitor": "pio run --target upload && npm run monitor",
        "upload:ota": "pio run --target upload --upload-port YOUR_ESP32_IP",
        "!monitor": "------ Serial Monitor ------",
        "monitor": "pio device monitor",
        "monitor:115200": "pio device monitor -b 115200",
        "monitor:filtered": "pio device monitor --filter colorize",
        "!test": "------ Run Tests ------",
        "test": "pio test",
        "test:verbose": "pio test -v",
        "test:native": "pio test -e native",
        "!device": "------ Device Management ------",
        "device:list": "pio device list",
        "device:info": "pio device list --serial --json-output",
        "!lib": "------ Library Management ------",
        "lib:install": "pio lib install",
        "lib:update": "pio lib update",
        "lib:list": "pio lib list",
        "lib:search": "echo 'Usage: npm run lib:search -- \"keyword\"' && pio lib search",
        "!config": "------ Configuration ------",
        "config:wifi": "echo 'Edit src/main.cpp to set WiFi credentials'",
        "config:server": "echo 'Edit src/main.cpp to set server URL'",
        "config:camera": "echo 'Edit src/main.cpp to configure camera settings'",
        "!flash": "------ Flash Management ------",
        "erase": "pio run --target erase",
        "flash:read": "esptool.py --port /dev/cu.usbserial* read_flash 0 0x400000 esp32_backup.bin",
        "flash:write": "esptool.py --port /dev/cu.usbserial* write_flash 0 esp32_backup.bin",
        "!ota": "------ OTA Update ------",
        "ota:host": "python3 -m http.server 8080 &",
        "ota:url": "echo 'OTA URL: http://YOUR_IP:8080/firmware.bin'",
        "!deploy": "----- Multiple Device Deployment -----",
        "predeploy": "npm run build",
        "deploy": "echo 'Connect ESP32 and run: npm run upload'",
        "deploy:batch": "echo 'For batch deployment, use PlatformIO CI or custom script'",
        "!clean": "---- Clean up -----",
        "clean": "pio run --target clean",
        "clean:all": "rm -rf .pio build",
        "!format": "---- Code Formatting -----",
        "format": "clang-format -i src/*.cpp include/*.h",
        "lint": "cppcheck src/",
        "!info": "---- Project Information -----",
        "info": "echo 'ðŸ“Ÿ ESP32-CAM Firmware v1.0.0' && echo 'Platform: ESP32' && echo 'Framework: Arduino' && pio --version && pio system info",
        "deps": "pio lib deps",
        "!help": "---- Help -----",
        "help": "echo '\nðŸ“š ESP32 Firmware Commands:\n\n  Build:    npm run build\n  Upload:   npm run upload\n  Monitor:  npm run monitor\n  Test:     npm test\n  Info:     npm run info\n  Devices:  npm run device:list\n'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lemoncloud-io/esp32-camera-streaming.git",
        "directory": "esp32-camera-firmware"
    },
    "keywords": [
        "esp32",
        "esp32-cam",
        "arduino",
        "platformio",
        "camera",
        "iot"
    ],
    "author": "Sim Si-Geun <sim@granule.io>",
    "license": "MIT",
    "platformio": {
        "env": "esp32cam",
        "board": "esp32cam",
        "framework": "arduino"
    }
}
