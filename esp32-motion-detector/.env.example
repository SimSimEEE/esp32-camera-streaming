# Environment variables for Motion Detection Service

# WebSocket Server
WEBSOCKET_SERVER=ws://localhost:8887

# OpenAI Configuration (optional - uses local heuristics if not provided)
OPENAI_API_KEY=your-api-key-here
ENABLE_AI=true
AI_COOLDOWN=3

# Motion Detection Configuration
MOTION_THRESHOLD=0.1
BLUR_SIZE=21
MIN_CONTOUR_AREA=500

# Snapshot Configuration
SAVE_SNAPSHOTS=true
SNAPSHOT_DIR=./snapshots
