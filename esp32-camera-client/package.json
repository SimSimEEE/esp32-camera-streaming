{
    "name": "esp32-camera-client",
    "version": "1.0.0",
    "description": "ESP32 Camera Web Client (HTML/CSS/JS)",
    "scripts": {
        "!dev": "------ Local Development ------",
        "dev": "python3 -m http.server 8080",
        "dev:node": "npx http-server -p 8080 -c-1",
        "dev:php": "php -S localhost:8080",
        "open": "open http://localhost:8080",
        "!build": "------ Build Static Files ------",
        "build": "echo 'No build required for static files'",
        "prebuild": "echo '‚úì Verifying files...' && ls -la *.html *.css *.js",
        "!deploy": "----- Deploy to S3 -----",
        "predeploy": "echo 'üì¶ Preparing to deploy web client to S3...'",
        "deploy": "aws s3 sync . s3://esp32-camera-viewer --exclude 'package.json' --exclude 'package-lock.json' --exclude 'README.md' --exclude '.DS_Store' --exclude 'node_modules/*'",
        "postdeploy": "echo '‚úì Deployed to S3: s3://esp32-camera-viewer'",
        "deploy:check": "aws s3 ls s3://esp32-camera-viewer",
        "deploy:delete": "aws s3 rm s3://esp32-camera-viewer --recursive",
        "!cdn": "----- CloudFront Management -----",
        "cdn:invalidate": "aws cloudfront create-invalidation --distribution-id YOUR_DISTRIBUTION_ID --paths '/*'",
        "cdn:list": "aws cloudfront list-distributions --query 'DistributionList.Items[*].[Id,DomainName,Aliases.Items[0]]' --output table",
        "!ec2": "----- Deploy to EC2 -----",
        "ec2:sync": "rsync -avz --exclude 'package.json' --exclude 'node_modules' --exclude '.DS_Store' . ec2-user@52.79.241.244:/home/ec2-user/esp32-camera-streaming/esp32-camera-client/",
        "ec2:nginx": "ssh ec2-user@52.79.241.244 'sudo nginx -t && sudo systemctl reload nginx'",
        "!docker": "----- Docker Nginx -----",
        "docker:build": "docker build -t esp32-camera-client:latest .",
        "docker:run": "docker run -d --name esp32-camera-client -p 80:80 esp32-camera-client:latest",
        "docker:stop": "docker stop esp32-camera-client && docker rm esp32-camera-client",
        "!config": "----- Configuration Helper -----",
        "config:local": "echo 'wsUrl: ws://localhost:8887/viewer'",
        "config:ec2": "echo 'wsUrl: ws://52.79.241.244:8887/viewer'",
        "config:prod": "echo 'wsUrl: wss://YOUR_DOMAIN/viewer'",
        "!test": "---- Testing -----",
        "test": "echo 'Open test.html in browser for manual testing'",
        "test:open": "open test.html || xdg-open test.html",
        "!validate": "---- Validation -----",
        "validate:html": "npx html-validate *.html || echo 'Install: npm install -g html-validate'",
        "validate:links": "echo 'Checking for broken links...' && grep -r 'http://' . || echo 'No links found'",
        "!clean": "---- Clean up -----",
        "clean": "rm -rf node_modules package-lock.json",
        "!info": "---- Project Information -----",
        "info": "echo 'üåê ESP32 Camera Web Client v1.0.0' && echo 'Type: Static HTML/CSS/JS' && echo 'Server: Any HTTP server' && ls -lh *.html *.css *.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lemoncloud-io/esp32-camera-streaming.git",
        "directory": "esp32-camera-client"
    },
    "keywords": [
        "esp32",
        "camera",
        "websocket",
        "web-client",
        "html5"
    ],
    "author": "Sim Si-Geun <sim@granule.io>",
    "license": "MIT",
    "devDependencies": {},
    "browserslist": [
        "last 2 versions",
        "not dead",
        "> 0.2%"
    ]
}
